/system script
add name=dhcpsnooper owner=admin policy=\
    ftp,reboot,read,write,policy,test,password,sniff,sensitive,romon source=":\
    local stubvid 666\r\
    \n:local smac (\$\"mac-address\")\r\
    \n:local portname [/int eth sw uni get [find mac-address=\$smac] port ]\r\
    \n:local imac  [/int eth sw mac find src-mac-address=\$smac]\r\
    \nif ([:len \$imac]<1)   do={/interface ethernet switch mac-based-vlan add\
    \_  new-customer-vid=(\$stubvid) src-mac-address=(\$smac) } else={\r\
    \nforeach i in \$imac  do={/interface ethernet switch mac-based-vlan set \
    \$i new-customer-vid=(\$stubvid) src-mac-address=(\$smac) disabled=no }   \
    \_     }\r\
    \n/interface ethernet switch port set \$portname allow-fdb-based-vlan-tran\
    slate=yes\r\
    \nlog error (\"DHCP found on PORT:\".(\$\"portname\").\"   MAC:\".(\$\"mac\
    -address\").\"   IP:\".(\$address))"
add name=backup_mail owner=admin policy=\
    ftp,reboot,read,write,policy,test,password,sniff,sensitive,romon source="/\
    system backup save name=email_backup \r\
    \n:delay 10s\r\
    \n\r\
    \n/tool e-mail send file=email_backup.backup to=\"mk-backup@allsp.ru\" bod\
    y=\"See attached file for System Backup\" subject=(\"[\".[/system identity\
    \_get name].\"] \". [/system clock get date] .\"backup\");"
